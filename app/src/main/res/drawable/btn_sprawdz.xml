<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#999999" />
            <stroke
                android:width="2px"
                android:color="#000000" />
            <corners
                android:radius="5dp" />
            <padding
				android:left="12dp"
				android:top="12dp"
				android:right="12dp"
				android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FFFFFF" />
			<gradient
                android:startColor="#DDDDDD"
                android:endColor="#AAAAAA"
                android:angle="270" />
            <stroke
                android:width="2px"
                android:color="#000000" />
            <corners
                android:radius="5dp" />
            <padding
				android:left="12dp"
				android:top="12dp"
				android:right="12dp"
				android:bottom="12dp" />
        </shape>
    </item>
</selector>