<resources>
	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="SG.Text" parent="android:TextAppearance">
	    <!-- <item name="android:typeface">monospace</item> -->
	</style>

    <style name="SG.to_translate" parent="SG.Text">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="SG.text_read" parent="SG.Text">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
	<style name="SG.rectangle_text_edit" parent="SG.Text">
	    <item name="android:textSize">24sp</item>
	    <item name="android:textColor">#222222</item>
	    <item name="android:layout_marginLeft">10dp</item>
	    <item name="android:layout_marginRight">10dp</item>
	    <item name="android:layout_marginBottom">10dp</item>
	</style>
	
	<style name="SG.btn_check" parent="SG.Text">
	    <item name="android:textSize">22sp</item>
	    <item name="android:textColor">#222222</item>
	</style>
	
	<style name="SG.btn_next" parent="SG.Text">
	    <item name="android:textSize">22sp</item>
	    <item name="android:textColor">#222222</item>
	</style>
    
</resources>
